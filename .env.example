# =============================================================
# ETSAI Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================

# --- Required ---

# Anthropic API key for Claude AI
ANTHROPIC_API_KEY=sk-ant-...

# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=

# --- Etsy API (optional, for Etsy integration) ---

# Etsy API key (from https://www.etsy.com/developers)
ETSY_API_KEY=
# Redirect URI for OAuth (must match Etsy app settings)
# For local dev: use ngrok HTTPS URL + /auth/etsy/callback
ETSY_REDIRECT_URI=

# --- Email Notifications (optional) ---

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# --- Deployment ---

# Set to 0 for production (enforces SECRET_KEY, enables secure cookies)
FLASK_DEBUG=1
# Port (default 5000)
PORT=5000
# Database path (default etsai.db)
ETSAI_DB=etsai.db
